<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3B5668"
    tools:context=".fragments.CollectionFragment">

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="640dp"
        android:layout_gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/petsButton"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:backgroundTint="#59C17F"
                android:text="@string/pets_button"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <Button
                android:id="@+id/itemsButton"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:backgroundTint="#59C1AC"
                android:text="@string/items_button"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <Button
                android:id="@+id/foodsButton"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:backgroundTint="#84C159"
                android:text="@string/foods_button"
                android:textColor="@color/black"
                android:textSize="20sp" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/petInventory"
            android:layout_width="match_parent"
            android:layout_height="500dp" />

    </LinearLayout>

</FrameLayout>