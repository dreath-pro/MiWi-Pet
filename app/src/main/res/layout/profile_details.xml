<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="30dp"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:paddingBottom="30dp"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:background="#567391">

        <ImageView
            android:id="@+id/userProfile"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitXY"
            android:src="@drawable/profile_amy"
            android:layout_marginBottom="18dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_marginBottom="32dp">

            <ImageView
                android:id="@+id/status"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/status_active"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:id="@+id/username"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="amyXpro"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="22sp"
                android:textAlignment="center"
                android:textColor="#BFE6ED"/>

        </LinearLayout>

        <TextView
            android:id="@+id/successTradeText"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="✅ Success Trade: 1000"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:textColor="#BFE6ED"
            android:textSize="20sp"
            android:layout_marginBottom="18dp"/>

        <TextView
            android:id="@+id/failedTradeText"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="❌ Failed Trade: 1000"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:textColor="#BFE6ED"
            android:textSize="20sp"/>

    </LinearLayout>

</RelativeLayout>