<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#8992E3"
    tools:context=".fragments.tab.FindOfferFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/offerView"
        android:layout_width="380dp"
        android:layout_height="450dp"
        android:layout_gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/buttonsLayout"/>

    <LinearLayout
        android:id="@+id/buttonsLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/offerView">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/backPageButton"
                android:layout_gravity="center"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:src="@drawable/arrow_left_icon"
                android:scaleType="fitXY"/>

            <TextView
                android:id="@+id/pageIndicator"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 out of 10"
                android:textSize="25sp"
                android:textColor="@color/black"/>

            <ImageView
                android:id="@+id/nextPageButton"
                android:layout_gravity="center"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:src="@drawable/arrow_right_icon"
                android:scaleType="fitXY"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">

            <Button
                android:id="@+id/lookupButton"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:text="Look Up"
                android:backgroundTint="#6A4A9E"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_marginEnd="15dp"/>

            <Button
                android:id="@+id/refreshOfferButton"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:text="Refresh"
                android:backgroundTint="#37632B"
                android:textColor="@color/white"
                android:textSize="20sp"/>

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/errorText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Error: "
        android:textSize="45sp"
        android:textColor="#FF0000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>